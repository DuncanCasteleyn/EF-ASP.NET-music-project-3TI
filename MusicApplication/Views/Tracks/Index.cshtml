@model IEnumerable<MusicDataModels.Track>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Length)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Release)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfPlay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrackLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Artists)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genres)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Length)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Release)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfPlay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrackLocation)
        </td>
        <td>
            @Html.ListBox("Id", new SelectList(item.Artists, "Id", "Name"))
        </td>
        <td>
            @Html.ListBox("Id", new SelectList(item.Genres, "Id", "Name"))
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
